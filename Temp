#include <iostream>
#include <iomanip>
#include <cmath>
using namespace std;


int main()
{
	int n;
	cin >> n;
	double x1, y1; // first coordinates
	cin >> x1 >> y1;
	double distance = 0;
	for (int i = 0; i < n - 1; i++) 
	{
		double x2, y2; // second coordinates
		cin >> x2 >> y2;
		// if (x1 > )
		// distance += f(x);
		x1 = x2;
		y1 = y2;
	}
	cout << setprecision(3) << setiosflags(ios::fixed) << distance << endl;

	return 0;
}
